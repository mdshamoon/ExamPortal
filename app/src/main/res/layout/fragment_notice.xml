<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notice">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:paddingVertical="@dimen/activity_horizontal_margin"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/oval_shape_edittext"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:text="Notice"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/notice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/notice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/notice3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:id="@+id/notice4"
            android:layout_width="match_parent"

            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>