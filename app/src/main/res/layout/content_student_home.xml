<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Student_home"
    android:layout_gravity="center"
    tools:showIn="@layout/app_bar_student_home">

   <LinearLayout
       android:layout_marginLeft="15dp"
       android:paddingVertical="@dimen/activity_horizontal_margin"
       android:paddingStart="5dp"
       android:paddingEnd="5dp"
       android:background="@drawable/oval_shape_edittext"
       android:id="@+id/linear1"
       android:layout_width="match_parent"
       android:layout_marginRight="@dimen/activity_horizontal_margin"
       android:orientation="vertical"

       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name"
        android:text="Notice"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/notice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/notice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/notice3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:id="@+id/notice4"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />
   </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/text12"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/sessional"
                android:hint="sessional"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Spinner
                android:id="@+id/semester"
                android:hint="semester"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:background="@drawable/oval_shape_register"
            android:textColor="@color/white"
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Search"
            />
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_margin="40dp"
            >
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject1"
                />
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject2"
                />
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject3"
                />
        </TableRow>
        <TableRow
            android:layout_margin="40dp"
            >
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject4"
                />
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject5"
                />
            <TextView
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:id="@+id/subject6"
                />
        </TableRow>

    </TableLayout>
    </LinearLayout>

</LinearLayout>